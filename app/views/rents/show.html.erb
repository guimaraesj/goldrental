  <div class="container">
    <div class="card-product">
      <div class="img-show">
        <%= image_cloudinary_tag(@rent.product) %>
      </div>
        <div class="card-product-infos">
          <h1>Product Details</h1>
          <p><strong>Product Name: </strong><%= @rent.product.name %></p>
          <p><strong>Minimal Rent Duration: </strong><%= @rent.product.min_rent_duration %> Day/s</p>
          <p><strong>Weight: </strong><%= @rent.product.weight %> g</p>
          <p><strong>Material: </strong><%= @rent.product.material %></p>
          <p><strong>Rent Price: </strong><%= '%.2f' % @rent.product.product_price %> €</p>
          <p><strong>Rent Cost: </strong><%= '%.2f' % @rent.product.rent_cost %> €</p>
          <p><strong>City: </strong><%= @rent.product.city %></p>
          <p><strong>State: </strong><%= @rent.product.state %></p>
          <p><strong>Approval State: </strong><%= @rent.approval_state %></p>
          <p><strong>Total Value: </strong><%= '%.2f' % @rent.total_value %>€</p>
          <p><strong>Duration: </strong><%= @rent.duration %> Days</p>
        </div>
    </div>
    <%= link_to "Back", rents_path, class: "btn btn-flat" %>
    <% if @rent.user == current_user%>
      <%= link_to "Edit", edit_product_rent_path, class: "btn btn-flat" %>
      <%= link_to "Cancel Rent",
      rent_path(@rent), class: "btn btn-flat",
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    <% elsif @rent.product.user == current_user %>
      <%= link_to "Approve", approved_rent_path, class: "btn btn-flat" %>
      <%= link_to "Decline", declined_rent_path, class: "btn btn-flat" %>
    <% end %>
  </div>
