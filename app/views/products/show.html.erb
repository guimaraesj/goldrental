<div class="card-product">
  <%= image_cloudinary_tag(@product) %>
  <div class="card-product-infos">
    <h1>Product</h1>
    <p><strong>Product Name: </strong><%= @product.name %></p>
    <p><strong>Description: </strong><%= @product.description %></p>
    <p><strong>Minimal Rent Durantion: </strong><%= @product.min_rent_duration %> Day/s</p>
    <% if @product.weight.present? %>
      <p><strong>Weight: </strong><%= @product.weight %> g</p>
    <% end %>
    <p><strong>Material: </strong><%= @product.material %></p>
    <p><strong>Product Price: </strong><%= '%.2f' % @product.product_price %> €</p>
    <p><strong>Rent Cost: </strong><%= '%.2f' % @product.rent_cost %> €</p>
    <p><strong>City: </strong><%= @product.city %></p>
    <p><strong>State: </strong><%= @product.state %></p>
  </div>
  <% if policy(@product).edit? %>
    <%= link_to "Edit this product", edit_product_path, class: "btn btn-flat" %>
    <%= link_to "Delete this product", product_path(@product), class: "btn btn-flat", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} if policy(@product).destroy?%>
  <% end %>
</div>

<%= link_to "Back to products", products_path,  class: "btn btn-flat" %>
<%= link_to "Rent now", new_product_rent_path(@product), class: "btn btn-flat" %>
