<div class="container p-0">
  <h1>Edit Product</h1>
  <%= simple_form_for(@product) do |f| %>
    <%= f.input :name, label: 'Insert a name for your product' %>
    <%= f.input :description %>
    <%= f.input :weight, label: 'Weight (g)' %>
    <%= f.input :material %>
    <%= f.input :product_price, label: 'Estimated Value: (€)' %>
    <%= f.input :rent_cost, label: 'Cost/day (€)' %>
    <%= f.input :min_rent_duration, label: 'Days' %>  <%#= validate this as integer %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.submit"Update Product", class: "btn btn-primary"%>
    <%= link_to "Back", product_path, class: "btn btn-flat" %>
  <% end %>
</div>
